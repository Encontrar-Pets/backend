datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model temp_home {
  id String @id @default(cuid())
  name String
  phone String
  address Json
  security_data Json
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  pets   pets[] 
}

model owners {
  id String @id @default(cuid())
  name String
  phone String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  pets   pets[] 
}

model tags {
  id String @id @default(cuid())
  description String
  created_at DateTime @default(now())

  pets pets[]
}

model pets {
  id String @id @default(cuid())
  name String
  description String
  type String @db.VarChar(1)
  status String @db.VarChar(1)
  temp_home_id String?
  owner_id String?
  shelter_id String?
  img_url String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  temp_home   temp_home? @relation(fields: [temp_home_id], references: [id])
  owners   owners? @relation(fields: [owner_id], references: [id])
  shelters   shelters? @relation(fields: [shelter_id], references: [id])

  tags tags[]
}

model shelters {
  id String @id @default(cuid())
  name String
  phone String
  address Json
  login String
  password String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  pets pets[]
}
